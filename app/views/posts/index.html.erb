<h1>All Posts</h1>
<% @posts.first.title = "SPAM" %>
<% @posts.each_with_index do |post, index| %>
  <% if (index % 5 == 0)%>
    <% post.title = "SPAM" %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to post.title, post %>
          </h4>
        </div>
      </div>
      <% else %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to post.title, post %>
          </h4>
        </div>
      </div>
    <% end %>
<% end %>
